@{
  Layout = "_Layout";
}

@using PierresTreats.Models;

<h1>Flavors</h1>

<div class="container page-content py-4">
  @if (@Model.Count == 0)
  {
    <h3>No flavors have been added!</h3>
  }
  else
  {
    <ul>
      @foreach (Flavor flavor in Model)
      {
        <li>@Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId })</li>
      }
    </ul>
  }
</div>