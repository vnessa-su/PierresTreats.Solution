@{
  Layout = "_Layout";
}

@using PierresTreats.Models
@model PierresTreats.Models.Flavor

<h1>Add New Flavor</h1>

<div class="container page-content">
  @using (Html.BeginForm())
  {
    <div class="form-group form-inline">
      @Html.LabelFor(model => model.Name, new{@class = "col-sm-4 col-form-label"})
      @Html.TextBoxFor(model => model.Name, new {@class = "form-control", required="required"})
    </div>

    <div>
      <p>Treat Options:</p>
      @if (@ViewBag.Treats.Count == 0)
      {
        <p>No Treat Selections Added</p>
      }
      else
      {
        <ul>
          @foreach (Treat treat in ViewBag.Treats)
          {
            <li>
              <input type="checkbox" name="treatIds" value="@treat.TreatId" />
              @treat.Name
            </li>
          }
        </ul>
      }
    </div>

    <div class="text-center my-3">
      <input type="submit" value="Add" class="btn btn-primary btn-lg" />
    </div>
  }
</div>