@{
  Layout = "_Layout";
}

@using PierresTreats.Models
@model PierresTreats.Models.Flavor

<h1>Add Treats to @Html.DisplayFor(model => model.Name)</h1>

<div class="container page-content">
  <h4>Treat Options:</h4>
  @using (Html.BeginForm())
  {
    @Html.HiddenFor(model => model.FlavorId)

    @if (@ViewBag.Treats.Count == 0)
    {
      <p>No Treat Selections Added</p>
    }
    else
    {
      <ul>
        @foreach (Treat treat in ViewBag.Treats)
        {
          <li>
            <input type="checkbox" name="treatIds" value="@treat.TreatId" />
            @treat.Name
          </li>
        }
      </ul>
    }

    <div class="text-center">
      <input type="submit" value="Save" class="btn btn-primary btn-lg" />
    </div>
  }
</div>