@{
  Layout = "_Layout";
}

@using PierresTreats.Models
@model PierresTreats.Models.Treat

<h1>Add Flavors to @Html.DisplayFor(model => model.Name)</h1>

<div class="container page-content">
  <h4>Flavor Profile:</h4>
  @using (Html.BeginForm())
  {
    @Html.HiddenFor(model => model.TreatId)

    @if (@ViewBag.Flavors.Count == 0)
    {
      <p>No Flavor Selections Added</p>
    }
    else
    {
      <ul>
        @foreach (Flavor flavor in ViewBag.Flavors)
        {
          <li>
            <input type="checkbox" name="flavorIds" value="@flavor.FlavorId" />
            @flavor.Name
          </li>
        }
      </ul>
    }

    <div class="text-center">
      <input type="submit" value="Save" class="btn btn-primary btn-lg" />
    </div>
  }
</div>