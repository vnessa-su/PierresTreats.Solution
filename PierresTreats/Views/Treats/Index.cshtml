@{
  Layout = "_Layout";
}

@using PierresTreats.Models;

<h1>Treats</h1>

<div class="container page-content py-4">
  @if (@Model.Count == 0)
  {
    <h3>No treats have been added!</h3>
  }
  else
  {
    <ul>
      @foreach (Treat treat in Model)
      {
        <li>@Html.ActionLink($"{treat.Name}", "Details", new { id = treat.TreatId })</li>
      }
    </ul>
  }
</div>