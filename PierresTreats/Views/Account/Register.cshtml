@{
  Layout = "_Layout";
}

@using PierresTreats.ViewModels

@model RegisterViewModel

<h1>Register a New User</h1>

<div class="container page-content text-center">
  @using (Html.BeginForm("Register", "Account", FormMethod.Post))
  {
    <div class="form-group form-inline">
      @Html.LabelFor(user => user.Email, new{@class = "col-sm-5 col-form-label"})
      @Html.TextBoxFor(user=> user.Email, new {@class = "form-control", required="required", type="email"})
    </div>

    <div class="form-group form-inline">
      @Html.LabelFor(user => user.Password, new{@class = "col-sm-5 col-form-label"})
      @Html.PasswordFor(user=> user.Password, new {@class = "form-control", required="required"})
    </div>

    <div class="form-group form-inline">
      @Html.LabelFor(user => user.ConfirmPassword, new{@class = "col-sm-5 col-form-label"})
      @Html.PasswordFor(user=> user.ConfirmPassword, new {@class = "form-control", required="required"})
    </div>

    <div class="text-center my-3">
      <input type="submit" value="Register" class="btn btn-primary btn-lg" />
    </div>
  }
</div>