@{
  Layout = "_Layout";
}

@using PierresTreats.ViewModels

@model LoginViewModel

<h1>Log In to Account</h1>

<div class="container page-content text-center">
  @using (Html.BeginForm())
  {
    <div class="form-group form-inline">
      @Html.LabelFor(user => user.Email, new{@class = "col-sm-5 col-form-label"})
      @Html.TextBoxFor(user=> user.Email, new {@class = "form-control", required="required", type="email"})
    </div>

    <div class="form-group form-inline">
      @Html.LabelFor(user => user.Password, new{@class = "col-sm-5 col-form-label"})
      @Html.PasswordFor(user=> user.Password, new {@class = "form-control", required="required"})
    </div>

    <div class="text-center my-3">
        <input type="submit" value="Log In" class="btn btn-primary btn-lg" />
      </div>
  }
  <p>@Html.ActionLink("Register", "Register")</p>
</div>